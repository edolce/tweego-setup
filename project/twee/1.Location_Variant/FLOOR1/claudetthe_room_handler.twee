:: claudetthe_room_handler
<<wrapper "Claudhette Room">>
<<nobr>>
    <<set $routine = {
        "claudetthe_room": {
            "morning": {
                is_in_room: false,
                can_enter: true,
                event: "claudetthe_room"
            }
        }
    }>>

    <<set $time = "morning">>

   <<if $routine.claudetthe_room[$time].is_in_room === false>>
        <<if $routine.claudetthe_room[$time].can_enter === true>>
            <<include "default_claudetthe_room">>
        <<else>>
            <<include "CANT_ENTER_claudetthe_room">>
        <</if>>
    <<else>>
        <<if $routine.claudetthe_room[$time].can_enter === true>>
            <<include "complex_claudetthe_room">>
        <<else>>
            <<include "CANT_ENTER_claudetthe_room">>
        <</if>>
    <</if>>
    <<if $events.floor1 !== undefined>>
        <<for _key, _value range $events.floor1>>
                <<include _value.event_name>>
                <<set $_ = delete $events.floor1[_key]>>
        <</for>>
    <</if>>
<</nobr>>
<</wrapper>>




:: default_claudetthe_room
<<nobr>>
    <<photo "claudetthe-room">>
    
    <<choices "What To DO?">>
        <<choice-item "search_claudetthe_room" "search-claudetthe-room" "Search">>
    <</choices>>

    <<button "Back" "floor1_handler">><</button>>

<</nobr>>


:: search_claudetthe_room
<<nobr>>

    <<if random(1,4) == 1>>
        <<include "find_lingerie_claudetthe_room">>
        <<else>>
        <<narrator>>
        You search the room, but find nothing of interest.
        <</narrator>>
    <</if>>

    <<button "Back" "claudetthe_room_handler">><</button>>
    
    
<</nobr>>


